<%- include('../partials/header') %>
<style> /* Reusing auth form styles */
    .auth-form-container { max-width: 450px; ... }
    /* ... */
</style>
<div class="auth-form-container">
    <h2 style="text-align: center; margin-bottom: 2rem;">Forgot Your Password?</h2>
    <p style="text-align:center; color: var(--silver); margin-bottom:1.5rem;">Enter your email address and we will send you a link to reset your password.</p>
    <form action="/forgot-password" method="POST">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required>
        </div>
        <button type="submit" class="btn btn-primary" style="width: 100%;">Send Reset Link</button>
    </form>
</div>
<%- include('../partials/footer') %>