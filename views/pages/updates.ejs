<%- include('../partials/header') %>
<div class="container static-page-container">
    <h1>Site News & Updates</h1>
    <% announcements.forEach(announcement => { %>
        <div style="border-bottom: 1px solid var(--light-grey); padding-bottom:1.5rem; margin-bottom:1.5rem;">
            <h2><%= announcement.title %></h2>
            <p style="color:var(--silver);">
                <em>Posted by <%= announcement.author %> on <%= announcement.createdAt.toLocaleDateString() %></em>
            </p>
            <div><%- announcement.content.replace(/\n/g, '<br>') %></div>
        </div>
    <% }) %>
</div>
<%- include('../partials/footer') %>