<%- include('../partials/header') %>
<div class="container">
    <div class="profile-header">
        <img src="<%= profileUser.profileImageUrl || '/images/default-avatar.png' %>" alt="<%= profileUser.username %>'s Avatar" style="width: 150px; height: 150px; border-radius: 50%; object-fit: cover;">
        <h1><%= profileUser.username %>'s Uploads</h1>

        <!-- ======== ADD THIS NEW ELEMENT ======== -->
        <% if (profileUser.bio) { %>
            <p style="color: var(--silver); max-width: 600px; margin: 1rem auto 0; font-style: italic;">
                "<%= profileUser.bio %>"
            </p>
        <% } %>
        <!-- ======== END OF NEW ELEMENT ======== -->
        
        <button id="share-profile-btn" class="btn btn-secondary" style="margin-top: 1rem;">
            ðŸ”— Share Profile
        </button>
    </div>

    <section class="upload-history" style="margin-top: 2rem;">
        <% if(uploads && uploads.length > 0) { %>
            <div class="item-grid">
                <% uploads.forEach(file => { %>
                    <!-- Reusing our standard item card -->
                    <a href="/mods/<%= file._id %>" class="item-card <%= file.category === 'android' || file.category === 'ios' ? 'square-image' : '' %>">
                         <div class="card-image" style="background-image: url('<%= file.iconUrl %>'); background-size: cover; background-position: center;"></div>
                         <div class="card-body">
                            <h3 class="card-title"><%= file.name %></h3>
                            <p class="card-platform"><%= file.version %></p>
                            <div class="star-rating" data-rating="<%= file.averageRating %>">
                                <span class="star">&#9733;</span><span class="star">&#9733;</span><span class="star">&#9733;</span><span class="star">&#9733;</span><span class="star">&#9733;</span>
                            </div>
                        </div>
                    </a>
                <% }) %>
            </div>
        <% } else { %>
            <p style="text-align: center; padding: 2rem;"><%= profileUser.username %> hasn't uploaded any mods yet.</p>
        <% } %>
    </section>
</div>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const shareButton = document.getElementById('share-profile-btn');
        const profileUser = <%- JSON.stringify(profileUser) %>; // Securely pass user data to JS

        // --- The URL to be shared ---
        const shareUrl = window.location.href;
        const shareTitle = `${profileUser.username}'s Profile on GPL Mods`;
        const shareText = `Check out all the mods uploaded by ${profileUser.username} on GPL Mods!`;

        if (shareButton) {
            shareButton.addEventListener('click', async () => {
                
                // --- Check if the modern Web Share API is available ---
                if (navigator.share) {
                    try {
                        await navigator.share({
                            title: shareTitle,
                            text: shareText,
                            url: shareUrl,
                        });
                        console.log('Profile shared successfully!');
                    } catch (error) {
                        console.error('Error using Web Share API:', error);
                    }
                } else {
                    // --- Fallback for desktop browsers: Copy to clipboard ---
                    try {
                        await navigator.clipboard.writeText(shareUrl);
                        // Provide feedback to the user
                        shareButton.textContent = 'âœ… Link Copied!';
                        setTimeout(() => {
                            shareButton.innerHTML = 'ðŸ”— Share Profile'; // Revert back after 2 seconds
                        }, 2000);
                    } catch (err) {
                        console.error('Failed to copy link to clipboard:', err);
                        alert('Could not copy link. Please copy the URL from your browser address bar.');
                    }
                }
            });
        }
    });
</script>

<%- include('../partials/footer') %>