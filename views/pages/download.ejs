<%- include('../partials/header') %>

<style>
    /* Page-specific styles for the download page */
    .mod-header {
        display: flex;
        align-items: center;
        gap: 2rem;
        margin-bottom: 2rem;
    }
    .mod-icon {
        width: 120px;
        height: 120px;
        border-radius: 12px;
        object-fit: cover;
        border: 2px solid var(--light-grey);
    }
    .mod-title h1 { margin-bottom: 0.5rem; }
    .mod-meta-info { color: var(--silver); }
    
    .mod-actions {
        margin: 2rem 0;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .mod-media-gallery {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1rem;
        margin-bottom: 2rem;
    }
    .mod-media-gallery img {
        width: 100%;
        border-radius: 8px;
        border: 1px solid var(--light-grey);
    }

    .mod-description-tabs { margin-bottom: 2rem; }
    .tabs-nav {
        display: flex;
        gap: 0.5rem;
        border-bottom: 2px solid var(--light-grey);
    }
    .tabs-nav button {
        padding: 10px 20px;
        border: none;
        background: none;
        color: var(--silver);
        cursor: pointer;
        font-size: 1.1rem;
        border-bottom: 3px solid transparent;
        transform: translateY(2px);
    }
    .tabs-nav button.active {
        color: var(--gold);
        border-bottom-color: var(--gold);
    }
    .tab-content {
        padding: 1.5rem;
        background-color: var(--dark-grey);
        border: 1px solid var(--light-grey);
        border-top: none;
        display: none;
        line-height: 1.7;
    }
    .tab-content.active {
        display: block;
    }

    /* Form Styles */
    .form-group {
        margin-bottom: 1rem;
    }
    .form-group label {
        display: block;
        margin-bottom: 0.5rem;
    }
</style>

<div class="container">

    <!-- Mod Header: Icon, Title, Rating, and Meta Info -->
    <section class="mod-header">
        <img src="<%= file.iconUrl %>" alt="<%= file.name %> Icon" class="mod-icon">
        <div class="mod-title">
            <h1><%= file.name %></h1>
            <!-- Rating display -->
            <div style="display: flex; align-items: center; gap: 1rem;">
                <div class="star-rating" data-rating="<%= file.averageRating %>">
                    <span class="star">&#9733;</span><span class="star">&#9733;</span><span class="star">&#9733;</span><span class="star">&#9733;</span><span class="star">&#9733;</span>
                </div>
                <span style="color: var(--silver);">(<%= file.ratingCount %> Reviews)</span>
            </div>
            <p class="mod-meta-info" style="margin-top: 0.5rem;">
                Version: <%= file.version %> | 
                Downloads: <%= file.downloads.toLocaleString() %> | 
                By: <%= file.uploader %>
            </p>
        </div>
    </section>

    <!-- Download & Action Buttons -->
    <section class="mod-actions">
        <a href="/download-file/<%= file._id %>" class="btn btn-primary" style="padding: 15px 30px; font-size: 1.2rem;">Download Now</a>
        
        <!-- INTEGRATED UPDATE: Whitelist/Wishlist Toggle Logic -->
        <% if (user) { %>
            <form action="/files/<%= file._id %>/whitelist" method="POST" style="margin: 0;">
                <% if (userHasWhitelisted) { %>
                    <button type="submit" class="btn btn-primary">Remove from Whitelist</button>
                <% } else { %>
                    <button type="submit" class="btn btn-secondary">Add to Whitelist</button>
                <% } %>
            </form>
        <% } %>

        <button type="button" class="btn btn-secondary" id="reportModalBtn">Report File</button>
    </section>

    <!-- Screenshots and Video Gallery -->
    <section class="mod-media-gallery">
        <% file.screenshotUrls.forEach(url => { %>
            <img src="<%= url %>" alt="Screenshot of <%= file.name %>">
        <% }) %>
    </section>

    <!-- Mod/Official Description Tabs -->
    <section class="mod-description-tabs">
        <div class="tabs-nav">
            <button class="tab-button active" data-tab="mod-info">Mod Information</button>
            <button class="tab-button" data-tab="original-desc">Original Description</button>
        </div>
        <div id="mod-info" class="tab-content active">
            <%- file.modDescription.replace(/\n/g, '<br>') %>
        </div>
        <div id="original-desc" class="tab-content">
            <%- file.officialDescription ? file.officialDescription.replace(/\n/g, '<br>') : 'No official description was provided.' %>
        </div>
    </section>

    <!-- Write a Review Section -->
    <% if (user) { %> 
    <section class="write-review-section" style="margin-top: 3rem;">
        <h3>Write a Review</h3>
        <form action="/reviews/add/<%= file._id %>" method="POST" class="review-form">
             <div class="form-group">
                <label for="rating">Your Rating (1-5)*</label>
                <select name="rating" id="rating" required style="width:100%; padding: 10px; background-color: var(--black); border: 1px solid var(--light-grey); color: var(--white); border-radius: 4px;">
                    <option value="" disabled selected>Select a rating</option>
                    <option value="5">5 Stars (Excellent)</option>
                    <option value="4">4 Stars (Good)</option>
                    <option value="3">3 Stars (Average)</option>
                    <option value="2">2 Stars (Poor)</option>
                    <option value="1">1 Star (Awful)</option>
                </select>
             </div>
             <div class="form-group">
                <label for="comment">Your Comment*</label>
                <textarea name="comment" id="comment" required style="width: 100%; min-height: 100px; padding: 10px; background-color: var(--black); border: 1px solid var(--light-grey); color: var(--white); border-radius: 4px;"></textarea>
             </div>
             <button type="submit" class="btn btn-primary">Submit Review</button>
        </form>
    </section>
    <% } %>

    <!-- Existing Reviews Section -->
    <section class="reviews-list" style="margin-top: 3rem; margin-bottom: 3rem;">
        <h2>User Reviews (<%= file.ratingCount %>)</h2>
        <% if (reviews && reviews.length > 0) { %>
            <% reviews.forEach(review => { %>
                <div class="review-card" style="background-color: var(--dark-grey); border: 1px solid var(--light-grey); border-radius: 8px; padding: 1.5rem; margin-bottom: 1.5rem;">
                    <div style="display: flex; justify-content: space-between; align-items: center;">
                        <div class="star-rating" data-rating="<%= review.rating %>">
                             <span class="star">&#9733;</span><span class="star">&#9733;</span><span class="star">&#9733;</span><span class="star">&#9733;</span><span class="star">&#9733;</span>
                        </div>
                        <span style="color: var(--silver); font-size: 0.9rem;">
                            by <%= review.username %> on <%= review.createdAt.toLocaleDateString() %>
                        </span>
                    </div>
                    <p style="margin-top: 1rem;"><%- review.comment.replace(/\n/g, '<br>') %></p>

                    <!-- ======== NEW REVIEW ACTIONS SECTION ======== -->
                    <div class="review-actions" style="margin-top: 1rem; padding-top: 1rem; border-top: 1px solid var(--light-grey); display: flex; align-items: center; gap: 1rem;">
                        
                        <!-- The form submits to our new route -->
                        <form action="/reviews/<%= review._id %>/vote" method="POST">
                            <button type="submit" class="btn btn-secondary" style="padding: 5px 10px; font-size: 0.9rem;">
                                Helpful
                            </button>
                        </form>
                        
                        <% if (review.isHelpfulCount > 0) { %>
                            <span style="color: var(--silver);"><%= review.isHelpfulCount %> people found this helpful</span>
                        <% } %>
                    </div>
                    <!-- ======== END OF NEW SECTION ======== -->

                </div>
            <% }) %>
        <% } else { %>
            <p>No reviews have been written for this mod yet. Be the first!</p>
        <% } %>
    </section>

    <!-- UPDATE 2: REPORT FILE MODAL -->
    <div id="reportModal" class="modal" style="display: none; position: fixed; z-index: 1001; left: 0; top: 0; width: 100%; height: 100%; overflow: auto; background-color: rgba(0,0,0,0.7);">
        <div class="modal-content" style="background-color: var(--dark-grey); margin: 15% auto; padding: 2rem; border: 1px solid var(--light-grey); width: 80%; max-width: 500px; border-radius: 8px; position: relative;">
            <span class="close-modal" style="color: var(--silver); float: right; font-size: 28px; font-weight: bold; cursor: pointer;">&times;</span>
            <h3>Report "<%= file.name %>"</h3>
            <form action="/files/<%= file._id %>/report" method="POST">
                <div class="form-group" style="margin-top: 1rem;">
                    <label for="reason">Reason for reporting*</label>
                    <select name="reason" id="reason" required style="width:100%; padding: 10px; background-color: var(--black); border: 1px solid var(--light-grey); color: var(--white); border-radius: 4px;">
                        <option value="" disabled selected>Select a reason...</option>
                        <option value="malware">Contains malware/virus</option>
                        <option value="broken-file">File is broken or does not work</option>
                        <option value="incorrect-info">Description or screenshots are incorrect</option>
                        <option value="copyright">Copyright infringement</option>
                        <option value="other">Other</option>
                    </select>
                </div>
                <div class="form-group" style="margin-top: 1rem;">
                    <label for="additionalComments">Additional Comments (Optional)</label>
                    <textarea name="additionalComments" id="additionalComments" style="width: 100%; min-height: 80px; padding: 10px; background-color: var(--black); border: 1px solid var(--light-grey); color: var(--white); border-radius: 4px;"></textarea>
                </div>
                <button type="submit" class="btn btn-primary" style="margin-top: 1rem;">Submit Report</button>
            </form>
        </div>
    </div>

</div> <!-- End of container -->

<script>
    document.addEventListener('DOMContentLoaded', () => {
        // --- Tab Functionality ---
        const tabButtons = document.querySelectorAll('.tab-button');
        const tabContents = document.querySelectorAll('.tab-content');

        tabButtons.forEach(button => {
            button.addEventListener('click', () => {
                tabButtons.forEach(btn => btn.classList.remove('active'));
                tabContents.forEach(content => content.classList.remove('active'));

                button.classList.add('active');
                const target = button.getAttribute('data-tab');
                document.getElementById(target).classList.add('active');
            });
        });

        // --- Initialize Star Ratings ---
        initializeStarRatings();

        // --- UPDATE 3: NEW MODAL LOGIC ---
        const modal = document.getElementById('reportModal');
        const btn = document.getElementById('reportModalBtn');
        const span = document.getElementsByClassName('close-modal')[0];

        if (btn) {
            btn.onclick = function() {
                modal.style.display = 'block';
            }
        }
        if (span) {
            span.onclick = function() {
                modal.style.display = 'none';
            }
        }
        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = 'none';
            }
        }

        // --- Optional: Show a "Thank you" message after reporting ---
        const urlParams = new URLSearchParams(window.location.search);
        if (urlParams.has('reported') && urlParams.get('reported') === 'true') {
            alert('Thank you for your report. An administrator will review it shortly.');
        }
    });

    function initializeStarRatings() {
        document.querySelectorAll('.star-rating').forEach(container => {
            const rating = parseFloat(container.dataset.rating);
            if(isNaN(rating)) return;
            
            const stars = container.querySelectorAll('.star');
            const fullStars = Math.floor(rating);
            const partialStar = (rating % 1);

            stars.forEach((star, i) => {
                if (i < fullStars) {
                    star.classList.add('filled');
                } else if (i === fullStars && partialStar > 0) {
                    star.style.setProperty('--fill-percentage', `${partialStar * 100}%`);
                    star.classList.add('partial');
                } else {
                    star.classList.remove('filled', 'partial');
                    star.style.removeProperty('--fill-percentage');
                }
            });
        });
    }
</script>

<%- include('../partials/footer') %>