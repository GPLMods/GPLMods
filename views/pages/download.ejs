<%- include('../partials/header') %>

<style>
    /* Page-specific styles for the download page */
    .mod-header {
        display: flex;
        align-items: center;
        gap: 2rem;
        margin-bottom: 2rem;
    }
    .mod-icon {
        width: 120px;
        height: 120px;
        border-radius: 12px;
        object-fit: cover;
        border: 2px solid var(--light-grey);
    }
    .mod-title h1 { margin-bottom: 0.5rem; }
    .mod-meta-info { color: var(--silver); }
    
    .mod-actions {
        margin: 2rem 0;
        display: flex;
        gap: 1rem;
    }

    .mod-media-gallery {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 1rem;
        margin-bottom: 2rem;
    }
    .mod-media-gallery img {
        width: 100%;
        border-radius: 8px;
        border: 1px solid var(--light-grey);
    }

    .mod-description-tabs { margin-bottom: 2rem; }
    .tabs-nav {
        display: flex;
        gap: 0.5rem;
        border-bottom: 2px solid var(--light-grey);
    }
    .tabs-nav button {
        padding: 10px 20px;
        border: none;
        background: none;
        color: var(--silver);
        cursor: pointer;
        font-size: 1.1rem;
        border-bottom: 3px solid transparent;
        transform: translateY(2px);
    }
    .tabs-nav button.active {
        color: var(--gold);
        border-bottom-color: var(--gold);
    }
    .tab-content {
        padding: 1.5rem;
        background-color: var(--dark-grey);
        border: 1px solid var(--light-grey);
        border-top: none;
        display: none;
        line-height: 1.7;
    }
    .tab-content.active {
        display: block;
    }
</style>

<div class="container">

    <!-- Mod Header: Icon, Title, and Meta Info -->
    <section class="mod-header">
        <img src="<%= file.iconUrl %>" alt="<%= file.name %> Icon" class="mod-icon">
        <div class="mod-title">
            <h1><%= file.name %></h1>
            <p class="mod-meta-info">
                Version: <%= file.version %> | 
                Downloads: <%= file.downloads.toLocaleString() %> | 
                By: <%= file.uploader %>
            </p>
        </div>
    </section>

    <!-- Download & Action Buttons -->
    <section class="mod-actions">
        <!-- The download button links to our new /download-file/:id route -->
        <a href="/download-file/<%= file._id %>" class="btn btn-primary" style="padding: 15px 30px; font-size: 1.2rem;">Download Now</a>
        <a href="#" class="btn btn-secondary">Add to Wishlist</a>
        <a href="#" class="btn btn-secondary">Report File</a>
    </section>

    <!-- Screenshots and Video Gallery -->
    <section class="mod-media-gallery">
        <% file.screenshotUrls.forEach(url => { %>
            <img src="<%= url %>" alt="Screenshot of <%= file.name %>">
        <% }) %>
    </section>

    <!-- Mod/Official Description Tabs -->
    <section class="mod-description-tabs">
        <div class="tabs-nav">
            <button class="tab-button active" data-tab="mod-info">Mod Information</button>
            <button class="tab-button" data-tab="original-desc">Original Description</button>
        </div>
        <div id="mod-info" class="tab-content active">
            <%- file.modDescription.replace(/\n/g, '<br>') %>
        </div>
        <div id="original-desc" class="tab-content">
            <%- file.officialDescription ? file.officialDescription.replace(/\n/g, '<br>') : 'No official description was provided.' %>
        </div>
    </section>

</div>

<script>
    // Page-specific JavaScript for tab functionality
    document.addEventListener('DOMContentLoaded', () => {
        const tabButtons = document.querySelectorAll('.tab-button');
        const tabContents = document.querySelectorAll('.tab-content');

        tabButtons.forEach(button => {
            button.addEventListener('click', () => {
                // Remove 'active' from all buttons and content
                tabButtons.forEach(btn => btn.classList.remove('active'));
                tabContents.forEach(content => content.classList.remove('active'));

                // Add 'active' to the clicked button and its corresponding content
                button.classList.add('active');
                document.getElementById(button.dataset.tab).classList.add('active');
            });
        });
    });
</script>

<%- include('../partials/footer') %>